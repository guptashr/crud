<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @article %>

            <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-white rounded", local: true) do |f| %>
                <div class="form-group row mt-4">
                    <%= f.label :title, class: "col-2 col-form-control" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>
                    </div>
                </div>

                <div class="form-group row mt-4">
                    <%= f.label :category, class: "col-2 col-form-control" %>
                    <div class="col-10">
                        <%#= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                            <%# cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                        <%# end %>
                        <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Make your selection" }, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-primary btn-lg" %>
                    <%= link_to 'Return to Home', articles_path, class: "btn btn-outline-info btn-lg ml-2" %>
                </div>
            <% end %>
        </div>
    </div>
</div>