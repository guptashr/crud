<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, class: "shadow p-3 mb-5 bg-white rounded", local: true) do |f| %>
    <div class="form-group row mt-4">
        <%= f.label :name, "Category Name", class: "col-2 col-form-control" %>
        <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-primary btn-lg" %>
        <% if params[:action] == 'new' %>
            <%= link_to 'Return', categories_path, class: "btn btn-outline-info btn-lg ml-2" %>
        <% elsif params[:action] == 'edit' %>
            <%= link_to 'Return', category_path(@category), class: "btn btn-outline-info btn-lg ml-2" %>
        <% end %>
    </div>
<% end %>