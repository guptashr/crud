<h2 class="text-center mt-4">User Listing Page</h2>

<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>

<div class="container">
    <% @users.each do |user| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    <h5 class="card-title"><%= link_to user.username.titleize, user_path(user), class: "text-success" %></h5>
                </div>
                <div class="card-body">
                    <p class="card-text"><%= user.articles.count %> Article</p>
                    <%= link_to "View", user_path(user), class: "btn btn-outline-success" %>
                    <% if logged_in? %>
                        <% if user == current_user %>
                            <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-info" %>
                        <% end %>
                        <% if current_user.admin? %>
                            <%= link_to "Delete", user_path(user), method: "delete", class: "btn btn-outline-danger", data: {confirm: "Are you sure you want to delete?"} %>
                        <% end %>
                    <% end %>
                </div>
                <div class="card-footer text-muted">
                    <small>
                        Joined <%= time_ago_in_words(user.created_at) %> ago,
                        edited <%= time_ago_in_words(user.updated_at) %> ago
                    </small>
                </div>
                </div>
            </div>
        </div>
    <% end %>

    <div class="flickr_pagination">
        <%= will_paginate @users, :container => false %>
    </div>
    
    <%= link_to "Create New User", new_user_path, class: "btn btn-outline-primary float-right mb-4" %>
</div>

<%= will_paginate @users, :container => false %>